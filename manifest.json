{
  "manifest_version": 3,
  "name": "MonoMind",
  "version": "0.1.0",
  "description": "Read faster, feel calmer.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "ai/model.js",
        "features/simplify.js",
        "features/tone.js",
        "features/calm.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}