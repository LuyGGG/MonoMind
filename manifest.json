{
  "manifest_version": 3,
  "name": "CalmPage â€“ Accessibility Assistant",
  "version": "1.0.2",
  "description": "Reduce visual stimuli for calmer reading: remove images/popups/animations and apply AI style suggestions.",
  "action": {
    "default_title": "CalmPage",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["features/image.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    { "resources": ["styles.css"], "matches": ["<all_urls>"] }
  ]
}
