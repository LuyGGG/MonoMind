{
  "manifest_version": 3,
  "name": "MonoMind",
  "version": "0.4.2",
  "description": "Read calmer, feel safer â€” autism-friendly tone softening and content simplification using Chrome's Rewriter & Summarizer APIs (Gemini Nano).",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/mono_logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "features/tone_rewriter.js",
        "features/simplify.js",
        "features/calm.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "features/simplify.js",
        "features/tone_rewriter.js",
        "features/calm.js",
        "features/prompts/*.txt"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
