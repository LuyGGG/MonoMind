{
  "manifest_version": 3,
  "name": "MonoMind",
  "version": "0.4.1",
  "description": "Read calmer, feel safer â€” autism-friendly tone softening using Chrome's Rewriter API (Gemini Nano).",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "features/tone_rewriter.js",
        "features/simplify.js",
        "features/calm.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["features/prompts/*.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}
